<VBox alignment="CENTER" prefHeight="579.0" prefWidth="767.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.kanbanboard.controller.ShowDetail">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <BorderPane prefHeight="588.0" prefWidth="727.0">
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                  <Label text="User: " />
                  <Label fx:id="accName" prefHeight="18.0" prefWidth="41.0" text="Label" />
                  <TextField fx:id="workspaceName" />
                  <Button mnemonicParsing="false" text="Update" />
                  <ComboBox fx:id="workspaceChoiceBox" onAction="#selectWorkspace" prefHeight="26.0" prefWidth="154.0" promptText="Select Workspace" />
                  <TextField />
                  <Button mnemonicParsing="false" text="Create" />
                  <Button mnemonicParsing="false" text="Delete" />
              </items>
            </ToolBar>
         </top>
         <center>
            <GridPane fx:id="border" prefHeight="386.0" prefWidth="577.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
            </GridPane>
         </center>
      </BorderPane>
   </children>
